<?xml version="1.0" encoding="utf-8"?>
<!-- 提示对话框：标题，内容，确定和取消按钮布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:id="@+id/promptdialog_textview_title"
        style="@style/DialogTitleText"
        android:layout_width="300dip"
        android:layout_height="40dp"
        android:background="@drawable/promptdialog_title_background"
        android:gravity="center" />

    <!-- 内容 -->

    <TextView
        android:id="@+id/promptdialog_textview_message"
        style="@style/DialogContentText"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp" />

    <!-- 按钮 -->

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:background="@drawable/promptdialog_bottom_background"
        android:orientation="horizontal"
        android:padding="10dp" >

        <!-- 确定按钮 -->

        <Button
            android:id="@+id/promptdialog_button_positive"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/promptdialog_button_selector"
            android:tag="4" />

        <!-- 取消按钮 -->

        <Button
            android:id="@+id/promptdialog_button_negative"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/promptdialog_button_selector"
            android:tag="4" />
    </LinearLayout>

</LinearLayout>