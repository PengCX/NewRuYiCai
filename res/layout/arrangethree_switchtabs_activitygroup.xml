<?xml version="1.0" encoding="utf-8"?>
<!-- 排列三选号页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.ruyicai.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 标题栏 -->

    <com.ruyicai.android.controller.compontent.bar.TitleBar
        android:id="@+id/constantly_switchtabs_activitygroup_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        custom:_fIsShowSpreadButton="true"
        custom:_fLeftTextId="@string/constantly"/>
    <!-- 开奖信息栏 -->

    <com.ruyicai.android.controller.compontent.bar.LotteryInformationBar
        android:id="@+id/constantly_switchtabs_activitygroup_lotteryinfomationbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/constantly_switchtabs_activitygroup_titlebar" />

    <!-- 投注栏占位 -->

    <com.ruyicai.android.controller.compontent.bar.BetBar
        android:id="@+id/constantly_switchtabs_activitygroup_betbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <!-- 自选和胆拖选项卡 -->

    <TabHost
        android:id="@+id/constantly_switchtabs_activitygroup_tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/constantly_switchtabs_activitygroup_betbar"
        android:layout_below="@id/constantly_switchtabs_activitygroup_lotteryinfomationbar"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- tab控件 -->

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" >
            </TabWidget>
            <!-- tab内容布局 -->

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@android:id/tabs" >
            </FrameLayout>
        </RelativeLayout>
    </TabHost>

</RelativeLayout>