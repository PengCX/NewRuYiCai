<?xml version="1.0" encoding="utf-8"?>
<!-- 投注信息选项卡页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 标题栏 -->

    <com.ruyicai.android.controller.compontent.bar.TitleBar
        android:id="@+id/betinformation_switchtabs_activitygroup_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 自选和胆拖选项卡 -->

    <TabHost
        android:id="@+id/betinformation_switchtabs_activitygroup_tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/betinformation_switchtabs_activitygroup_titlebar"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- tab控件 -->

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" >
            </TabWidget>
            <!-- tab内容布局 -->

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@android:id/tabs" >
            </FrameLayout>
        </RelativeLayout>
    </TabHost>

</RelativeLayout>